{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "dom",
      "es2015",
      "es2017.string",
      "es2017.object",
      "es2019.array",
      "ES2021.String"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["globals.d.ts", "src/**/*"]
}
